{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "yt-dlp-capability",
    "description": "Allow execution of yt-dlp for video downloading",
    "windows": [
        "main"
    ],
    "permissions": [
        {
            "identifier": "shell:allow-execute",
            "allow": [
                {
                    "name": "yt-dlp",
                    "cmd": "yt-dlp",
                    "args": true
                }
            ]
        }
    ]
}